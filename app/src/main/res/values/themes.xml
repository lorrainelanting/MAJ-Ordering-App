<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MAJ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Primary text color. -->
        <item name="android:textColor">@color/colorPrimary</item>

        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Nav.Filter</item>
    </style>
    <!-- Splash Screen -->
    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorSecondaryAccent</item>
    </style>

    <style name="TextBlurred" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextSecondary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryVariant</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorAccentVariant</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorSecondaryAccent</item>
    </style>

    <style name="IconStyle" parent="">
        <item name="tint">@color/colorSecondaryVariant</item>
    </style>
    
    <style name="Toolbar.Nav.Filter" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">@color/colorPrimary</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="minWidth">0dp</item>
    </style>
</resources>